extends layout

block content
  div.flex.items-center.justify-center.min-h-screen
    form.w-full.max-w-sm
      .mb-4
        label.block.text-gray-700.text-sm.font-bold.mb-2(for='username') Username
        input.appearance-none.border.border-gray-200.rounded.w-full.py-2.px-3.text-gray-700.leading-tight.focus.outline-none.focus.border-teal-500(type='text' placeholder='Username' id='username')
      .mb-4
        label.block.text-gray-700.text-sm.font-bold.mb-2(for='password') Password
        input.appearance-none.border.border-gray-200.rounded.w-full.py-2.px-3.text-gray-700.leading-tight.focus.outline-none.focus.border-teal-500(type='password' placeholder='Password' id='password')
      .mb-6
        button.bg-teal-500.hover.bg-teal-700.text-white.font-bold.py-2.px-4.rounded-full(onclick='authenticateUser(event)') Login